{
  "compilerOptions": {
    "sourceMap": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "noEmit": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
